<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AgeSmartVocabulary"
             xmlns:helpers="clr-namespace:AgeSmartVocabulary.Helpers"
             x:Class="AgeSmartVocabulary.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Value Converters -->
            <helpers:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <helpers:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <helpers:IsNullConverter x:Key="IsNullConverter" />
            <helpers:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>