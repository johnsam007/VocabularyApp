<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgeSmartVocabulary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AgeSmartVocabulary.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#FFFFFF"
    Shell.TabBarForegroundColor="#667EEA"
    Shell.TabBarUnselectedColor="#95A5A6">

    <TabBar>
        <ShellContent
            Title="Learn"
            Route="HomePage">
            <views:HomePage />
        </ShellContent>

        <ShellContent
            Title="Review"
            Route="ReviewListPage">
            <views:ReviewListPage />
        </ShellContent>

        <ShellContent
            Title="Settings"
            Route="SettingsPage">
            <views:SettingsPage />
        </ShellContent>
    </TabBar>

</Shell>