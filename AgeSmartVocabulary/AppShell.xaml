<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgeSmartVocabulary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AgeSmartVocabulary.Views"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Route="HomePage">
            <views:HomePage />
        </ShellContent>

        <ShellContent
            Title="Review"
            Route="ReviewListPage">
            <views:ReviewListPage />
        </ShellContent>

        <ShellContent
            Title="Settings"
            Route="SettingsPage">
            <views:SettingsPage />
        </ShellContent>
    </TabBar>

</Shell>